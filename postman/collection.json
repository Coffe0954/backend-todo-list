          "script": {
            "exec": [
              "pm.test(\"Create item\", function() {",
              "    pm.response.to.have.status(201)",
              "    var request = JSON.parse(pm.request.body.raw)",
              "    pm.environment.set(\"itemUid\", request.uid)",
              "})"
